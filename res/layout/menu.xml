<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget29"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/menuback"
	android:orientation="vertical">
	
    <ImageView
        android:id="@+id/imgbtn_menu_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/bm1" />
    
    <ImageView
        android:id="@+id/imgbtn_menu_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imgbtn_menu_start"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/bm2" />

    <ImageView
        android:id="@+id/imgbtn_menu_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imgbtn_menu_rank"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/bm3" />

    <ImageView
        android:id="@+id/imgbtn_menu_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imgbtn_menu_audio"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/bm4" />

    <ImageView
        android:id="@+id/imgbtn_menu_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imgbtn_menu_help"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/bm5" />

    <ImageView
        android:id="@+id/imgbtn_menu_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imgbtn_menu_about"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/bm6" />

</RelativeLayout>
